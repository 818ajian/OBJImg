{
  "name": "objimg",
  "version": "1.0.0",
  "description": "Convert OBJ/MTL files (exported from a 3D soft) into a lightweight image ready for THREE JS (or native WebGL).",
  "main": "build/objimg.js",
  "scripts": {
    "postinstall": "if [ ! -d './build' ]; then mkdir ./build; fi && npm run build",
    "build": "browserify ./source/OBJImage.js --standalone OBJImage -t [babelify --presets es2015] --outfile ./build/objimage.js",
    "start": "watchify ./source/OBJImage.js --standalone OBJImage -t [babelify --presets es2015] --outfile ./build/objimage.js"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/JordanDelcros/OBJImg.git"
  },
  "keywords": [
    "obj",
    "mtl",
    "compression",
    "optimization",
    "webgl",
    "3d",
    "three",
    "threejs",
    "three-js",
    "three.js",
    "javascript",
    "shader"
  ],
  "author": "Jordan Delcros",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/JordanDelcros/OBJImg/issues"
  },
  "homepage": "https://github.com/JordanDelcros/OBJImg#readme",
  "dependencies": {
    "babel-cli": "^6.6.5",
    "babel-core": "^6.7.4",
    "babel-preset-es2015": "^6.6.0",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "three-js": "^78.1.0"
  },
  "devDependencies": {
    "http-server": "^0.9.0",
    "watchify": "^3.7.0"
  }
}
